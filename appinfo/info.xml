<?xml version="1.0"?>
<info>
    <id>twofactor_backup_codes</id>
    <name>Two factor backup codes</name>
    <description>Two-factor auth backup codes provider</description>
    <summary>Backup codes let you access your account if your other factors are not available.</summary>
    <licence>AGPL</licence>
    <author>Semih Serhat Karakaya</author>
    <version>0.0.4</version>
    <namespace>TwoFactorBackupCodes</namespace>
    <category>security</category>
    <types>
        <prelogin/>
        <authentication/>
    </types>
    <screenshot>https://raw.githubusercontent.com/owncloud/twofactor_backup_codes/104e03d3b2a7d58e6d03c5fb28db281200a0ef84/screenshots/owncloud-twofactor-backup-codes.jpg</screenshot>
    <screenshot>https://raw.githubusercontent.com/owncloud/twofactor_backup_codes/717991de4a7d4ff634add9897867eeeed7662c7b/screenshots/verify.png</screenshot>
    <two-factor-providers>
        <provider>OCA\TwoFactorBackupCodes\Provider\BackupProvider</provider>
    </two-factor-providers>

    <dependencies>
        <owncloud min-version="10.0" max-version="10.0" />
    </dependencies>

    <settings>
        <personal>OCA\TwoFactorBackupCodes\Settings\PersonalPanel</personal>
    </settings>

    <website>https://github.com/owncloud/twofactor_backup_codes/</website>
    <bugs>https://github.com/owncloud/twofactor_backup_codes/issues</bugs>
    <repository type="git">https://github.com/owncloud/twofactor_backup_codes.git</repository>
</info>
